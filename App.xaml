<Application x:Class="GeoProj.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GeoProj"
             xmlns:helpers="clr-namespace:GeoProj.Helpers"
             xmlns:models="clr-namespace:GeoProj.Models">
    <Application.Resources>

        <ResourceDictionary>
            <helpers:EnumToBooleanConverter x:Key="EnumToBoolConverter" />
            
            <SolidColorBrush x:Key="AppWindowBackgroundBrush" Color="#FFF0F0F0"/>
            <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#AAFFFFFF"/>
            <SolidColorBrush x:Key="PopupBackgroundBrush" Color="#F9F9F9"/>
            <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FFDDDDDD"/>
            <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#FFFFFFFF"/>

            <SolidColorBrush x:Key="AppTextBrush" Color="#FF111111"/>
            <SolidColorBrush x:Key="PanelHeaderTextBrush" Color="#FF000000"/>
            <SolidColorBrush x:Key="PanelSubTextBrush" Color="#FF2C3E50"/>
            <SolidColorBrush x:Key="CoordTextBrush" Color="#FFFFFFFF"/>

            <SolidColorBrush x:Key="PanelBorderBrush" Color="#B0B0B0"/>
            <SolidColorBrush x:Key="CoordBackBrush" Color="#AA000000"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
